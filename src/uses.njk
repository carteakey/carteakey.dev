{# â”€â”€ Neofetch-style hardware block â”€â”€ #}
<div class="not-prose mb-10">
  <div class="card card-padding font-mono text-sm overflow-x-auto">
    <div class="flex flex-col sm:flex-row gap-6">
      <pre class="text-accent shrink-0 leading-tight hidden sm:block" style="color: var(--accent-color);">
        .:'
    __ :'__
 .'`  `-'  `'.
:          .-'
:         ;
 :   _.--'
  `-..__.-'
      </pre>
      <div class="flex-1 min-w-0">
        <div class="font-bold mb-2" style="color: var(--accent-color);">kartikey@macbook</div>
        <div class="border-b border-gray-300 dark:border-gray-600 mb-2" style="border-color: var(--accent-color);"></div>
        {% for key, value in uses.neofetch %}
          <div class="flex gap-2 leading-relaxed">
            <span class="font-bold shrink-0" style="color: var(--accent-color);">{{ key }}:</span>
            <span class="text-gray-600 dark:text-gray-400">{{ value }}</span>
          </div>
        {% endfor %}
        <div class="flex gap-1 mt-3">
          {% set colors = ["#e11d48", "#ea580c", "#eab308", "#22c55e", "#06b6d4", "#6366f1", "#a855f7", "#ec4899"] %}
          {% for color in colors %}
            <div class="w-4 h-4 rounded-sm" style="background-color: {{ color }};"></div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{# â”€â”€ Main categories in multi-column text layout â”€â”€ #}
<div class="not-prose">
  <div class="grid md:grid-cols-2 gap-x-12 gap-y-10">
    {% for category in uses.categories %}
      <section>
        <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
          {{ category.emoji }} {{ category.name }}
        </h2>
        <div class="space-y-3">
          {% for item in category.items %}
            <div>
              <div class="flex items-baseline gap-2">
                <span>{{ item.emoji }}</span>
                {% if item.link %}
                  <a href="{{ item.link }}" target="_blank" rel="noopener" class="font-semibold text-gray-900 dark:text-gray-100 link-accent hover:underline">{{ item.name }}</a>
                {% else %}
                  <span class="font-semibold text-gray-900 dark:text-gray-100">{{ item.name }}</span>
                {% endif %}
              </div>
              {% if item.description %}
                <p class="text-sm text-gray-500 dark:text-gray-400 ml-7 mt-0.5">{{ item.description }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </section>
    {% endfor %}
  </div>
</div>

{# â”€â”€ Retired section â”€â”€ #}
<div class="not-prose mt-12">
  <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">
    ğŸª¦ Retired
  </h2>
  <div class="space-y-3">
    {% for item in uses.retired %}
      <div class="flex items-baseline gap-2 opacity-70">
        <span>{{ item.emoji }}</span>
        <span class="font-semibold text-gray-900 dark:text-gray-100 line-through decoration-1">{{ item.name }}</span>
        <span class="text-xs text-gray-400 dark:text-gray-500">({{ item.retired_date }})</span>
      </div>
      {% if item.description %}
        <p class="text-sm text-gray-500 dark:text-gray-400 ml-7 -mt-2">{{ item.description }}</p>
      {% endif %}
    {% endfor %}
  </div>
</div>

