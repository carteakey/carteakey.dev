---
layout: layouts/base.njk
title: Games
---

<div class="md:max-w-xl mx-auto">
    <h1>Recent Games</h1>
    <div class="mb-8 p-4 bg-gray-100 dark:bg-gray-800 rounded">
        <p class="text-sm">
            Here are my recently played games from Steam
        </p>
    </div>

    <div class="grid md:grid-cols-2 gap-3">
        {% for game in steam | head(8) %}
        <div class="py-0 px-1 border-2 border-gray-200 shadow-xs dark:border-gray-600 flex flex-col">
            <img src="{{ game.library_hero }}" alt="{{ game.name }} hero" loading="lazy" decoding="async" class="-mt-2 h-28 object-cover rounded-t">
            
            <div class="flex flex-col items-center p-2">
                <a href="{{ game.url }}" target="_blank" rel="noopener noreferrer" title="View on Steam">
                    <h4 class="items-center font-bold -mt-2">{{ game.name }}</h4>
                </a>
                <p class="text-center text-xs -mt-2 text-gray-600 dark:text-gray-300">
                    {% if game.playtime_2weeks > 0 %}
                        {{ game.playtime_2weeks }}h last 2 weeks
                    {% endif %}
                    {% if game.playtime_forever > 0 %}
                        {% if game.playtime_2weeks > 0 %} â€¢ {% endif %}{{ game.playtime_forever }}h total
                    {% endif %}
                </p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
