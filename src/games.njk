---
layout: layouts/base.njk
title: Games
---

{% set pageTitle = title %}
{% set pageDescription = "Here are my recently played games from Steam" %}

<div class="mx-auto">
    <h1>Recent Games</h1>
    <div class="mb-8 intro-block">
        <p>{{ pageDescription }}</p>
    </div>

    <div class="grid gap-4 md:grid-cols-3">
        {% for game in steam | head(8) %}
        <article class="card card-hover overflow-hidden">
            <img src="{{ game.library_hero }}" alt="{{ game.name }} hero" loading="lazy" decoding="async" class="h-40 w-full object-cover">
            
            <div class="flex flex-col items-center gap-2 card-padding text-center">
                <a href="{{ game.url }}" target="_blank" rel="noopener noreferrer" title="View on Steam" class="inline-flex items-center gap-2 text-lg font-semibold tracking-tight text-gray-900 link-accent dark:text-gray-100">
                    {{ game.name }}
                    {% feather "external-link", class="w-4 h-4" %}
                </a>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    {% if game.playtime_2weeks > 0 %}
                        {{ game.playtime_2weeks }}h last 2 weeks
                    {% endif %}
                    {% if game.playtime_forever > 0 %}
                        {% if game.playtime_2weeks > 0 %} â€¢ {% endif %}{{ game.playtime_forever }}h total
                    {% endif %}
                </p>
            </div>
        </article>
        {% endfor %}
    </div>
</div>
