    {% set maxPosts = collections.posts.length | min(3) %} 

    <h1>Recent Posts</h1>
    {% set postslist = collections.posts | head(-3) %} {% set postslistCounter =
    collections.posts | length %}
    {% include "postslist.njk" %}
    <p>
      More posts can be found in <a href="{{ '/posts/' | url }}">the blog</a>.
    </p>

    <hr class="mt-4" />

    <h2>Quote of the Day</h2>
    
    <blockquote id="qotd">
      {{qotd.quote}}
    </blockquote>
    <p class='p-0 -mt-2 float-right italic text-xs' id='who'>Powered by ChatGPT</p>
    <!-- The script itself, loaded AFTER your root element. -->
    <script src="https://unpkg.com/typeit@8.7.1/dist/index.umd.js"></script>
    <script>
      const instance = new TypeIt("#qotd", {
        speed: 30,
        waitUntilVisible: true
      })
      instance.go();

      const instance2 = new TypeIt("#who", {
        speed: 30,
        waitUntilVisible: true,
        startDelay:4000
      })
      instance2.go().destroy();

    </script>