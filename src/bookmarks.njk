---
layout: layouts/base.njk
title: Bookmarks
description: A curated list of articles, tools, and resources I recommend
eleventyNavigation:
  key: Bookmarks
  order: 10
permalink: /bookmarks/
---

{% include "components/breadcrumbs.njk" %}

{% set totalCount = bookmarks.bookmarks | length %}
{% set categories = bookmarks.bookmarks | map('category') | uniq | sort %}
{% set sortedDates = bookmarks.bookmarks | map('date') | sort %}
{% set lastUpdated = (sortedDates | reverse)[0] %}

{% set pageTitle = title %}
{% set pageDescription = "Essays, tools, talks, and rabbit holes I keep coming back to." %}
{% set itemCount = totalCount %}
{% set itemLabel = "bookmarks" %}

<div class="max-w-5xl mx-auto">
  {% include "components/page-header.njk" %}

  <div class="mt-2 flex flex-wrap items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
    <span>Updated {{ lastUpdated | readableDate }}</span>
    <span>Â·</span>
    <div class="flex flex-wrap gap-1">
      {% for category in categories %}
        <a href="#{{ category | slugify }}" class="tag tag-interactive text-[0.65rem]">{{ category }}</a>
      {% endfor %}
    </div>
  </div>

  {% for category in categories %}
    {% set items = bookmarks.bookmarks | selectattr('category', 'equalto', category) | sort(attribute='date') | reverse %}
    {% set catCount = items | length %}
    <section id="{{ category | slugify }}" class="mt-8">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center gap-2">
        {{ category }}
        <span class="text-xs font-normal text-gray-500">{{ catCount }}</span>
      </h2>

      <div class="mt-3 grid gap-2 md:grid-cols-2 lg:grid-cols-3">
        {% for bookmark in items %}
          {% set domain = bookmark.url | domainFromUrl %}
          {% set favicon = bookmark.url | faviconUrl %}
          {% set domainInitial = bookmark.url | domainInitial %}
          <article class="card card-hover card-compact">
            <a href="{{ bookmark.url }}" target="_blank" rel="noopener noreferrer" class="text-sm font-semibold text-gray-900 link-accent dark:text-white line-clamp-1">
              {{ bookmark.title }}
            </a>
            {% if domain %}
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">{{ domain }}</p>
            {% endif %}
            {% if bookmark.description %}
              <p class="mt-1 text-xs text-gray-600 dark:text-gray-400 line-clamp-2">{{ bookmark.description }}</p>
            {% endif %}
          </article>
        {% endfor %}
      </div>
    </section>
  {% endfor %}

  <div class="mt-10 card card-compact">
    <p class="text-sm text-gray-600 dark:text-gray-300">
      Have a suggestion? <a href="mailto:{{ metadata.author.email }}" class="font-semibold accent-link">Drop me a note</a>.
    </p>
  </div>
</div>

<style>
  .line-clamp-1 { display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden; }
  .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
</style>
