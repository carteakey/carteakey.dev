  <script src="/static/js/theme.js"></script>
  
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script defer src="/static/js/alpine.min.js"></script>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}" />
  <meta name="generator" content="{{ eleventy.generator }}" />
  
  {# Open Graph / Facebook Meta Tags #}
  <meta property="og:type" content="{% if templateClass == 'tmpl-post' %}article{% else %}website{% endif %}" />
  <meta property="og:url" content="{{ metadata.url }}{{ page.url }}" />
  <meta property="og:site_name" content="{{ metadata.title }}" />
  <meta property="og:title" content="{{ title or metadata.title }}" />
  <meta property="og:description" content="{{ description or metadata.description }}" />
  {% if image %}
  <meta property="og:image" content="{{ metadata.url }}{{ image }}" />
  {% else %}
  <meta property="og:image" content="{{ metadata.url }}/img/avatar.png" />
  {% endif %}
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:locale" content="en_US" />
  
  {# Article specific Open Graph tags #}
  {% if templateClass == 'tmpl-post' %}
  <meta property="article:published_time" content="{{ page.date | htmlDateString }}" />
  {% if updated %}
  <meta property="article:modified_time" content="{{ updated | htmlDateString }}" />
  {% endif %}
  <meta property="article:author" content="{{ metadata.author.name }}" />
  {% for tag in tags | filterTagList %}
  <meta property="article:tag" content="{{ tag }}" />
  {% endfor %}
  {% endif %}
  
  {# Twitter Card Meta Tags #}
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content="{{ metadata.url }}{{ page.url }}" />
  <meta name="twitter:title" content="{{ title or metadata.title }}" />
  <meta name="twitter:description" content="{{ description or metadata.description }}" />
  {% if image %}
  <meta name="twitter:image" content="{{ metadata.url }}{{ image }}" />
  {% else %}
  <meta name="twitter:image" content="{{ metadata.url }}/img/avatar.png" />
  {% endif %}
  <meta name="twitter:creator" content="@carteakey" />
  <meta name="twitter:site" content="@carteakey" />
  
  {# Additional SEO Meta Tags #}
  <meta name="author" content="{{ metadata.author.name }}" />
  <link rel="canonical" href="{{ metadata.url }}{{ page.url }}" />
  
  {# Theme Color for mobile browsers #}
  <meta name="theme-color" content="#f59e0b" media="(prefers-color-scheme: light)" />
  <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)" />
  
  <link rel="stylesheet" href="{{ '/css/tailwind.css' | url }}" />

  <link rel="alternate" type="application/atom+xml" title="{{ metadata.title }} - Atom Feed" href="{{ '/feed.xml' | url }}">
  
  {# JSON-LD Structured Data for Website #}
  {% if page.url == "/" %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{ metadata.title }}",
    "url": "{{ metadata.url }}",
    "description": "{{ metadata.description }}",
    "author": {
      "@type": "Person",
      "name": "{{ metadata.author.name }}",
      "email": "{{ metadata.author.email }}",
      "url": "{{ metadata.author.url }}"
    },
    "publisher": {
      "@type": "Person",
      "name": "{{ metadata.author.name }}",
      "url": "{{ metadata.url }}"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "{{ metadata.url }}/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
  {% endif %}
</head>
{% set showReadingFrame = false %}
<body class="bg-gray-100 dark:bg-black font-sans {% if showReadingFrame %} md:py-16 md:bg-gray-100 md:dark:bg-gray-800{% endif %}">
  {# Skip to main content link for accessibility #}
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-amber-500 focus:text-black focus:rounded-md focus:font-semibold focus:shadow-lg">
    Skip to main content
  </a>
  
  <div
   class="md:max-w-3xl lg:max-w-4xl xl:max-w-5xl mx-auto {% if showReadingFrame %} md:bg-gray-100/95  md:dark:bg-zinc-950/90 md:shadow-[0_20px_60px_-28px_rgba(15,23,42,0.45)] md:dark:shadow-[0_16px_50px_-26px_rgba(0,0,0,0.65)] md:ring-1 md:ring-amber-100/40 md:dark:ring-zinc-800/40 md:px-28 lg:px-32 md:py-10 md:rounded-none{% endif %}">
    <div class="prose prose-amber max-w-full justify-center prose-lg prose-h1:text-2xl prose-h2:my-4 dark:prose-invert px-4 md:px-0 mx-auto {% if fullWidth %}max-w-none{% endif %}">
      <nav class="flex w-full py-8">

        {% set navPages = collections.all | eleventyNavigation %}

        <div class="flex flex-row w-full justify-between items-center gap-4">

          {# Site title - desktop #}
          <a class="no-underline hover:no-underline font-bold font-et-book text-2xl group hidden md:flex items-center shrink-0" href="{{ '/' | url }}">
            <span class="transition-colors group-hover:text-gradient">Kartikey Chauhan</span>
          </a>

          {# Site title - mobile #}
          <a class="no-underline hover:no-underline font-bold text-lg tracking-tight group flex md:hidden items-center shrink-0" href="{{ '/' | url }}">
            <span class="transition-colors group-hover:text-gradient">carteakey.dev</span>
          </a>

          <ul class="list-none m-0 p-0 text-lg md:text-xl flex items-center">
            {# Main navigation items #}
            {%- for entry in navPages %}
              {% if entry.title == "About" or entry.title == "Blog" or entry.title == "Now" %}
                <li class="px-1.5 sm:px-2 py-1 transition-all flex items-center">
                  <a class="font-bold no-underline link-glow sm:text-base md:text-xl" href="{{ entry.url }}">{{ entry.title }}</a>
                </li>
              {% endif %}
            {%- endfor %}

            <li class="flex items-center ml-1">
              <a class="font-bold no-underline inline-flex items-center justify-center p-1.5 sm:p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="{{ '/more/' | url }}" title="More pages" aria-label="More pages">
                {% feather "compass", class="w-4 h-4 sm:w-5 sm:h-5" %}
              </a>
            </li>

            <li class="flex items-center">
              <button id="toggleDarkMode" class="font-bold text-xs p-2 transition-all rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 focus-ring inline-flex items-center justify-center" aria-label="Toggle dark mode">
                {% feather "moon" , class="block dark:hidden w-5 h-5" %}
                {% feather "sun" , class="hidden dark:block w-5 h-5"%}
              </button>
            </li>
          </ul>

        </div>

      </nav>

      <main id="main-content" class="{% if fullWidth %}-mx-[calc(50vw-50%)] w-screen px-4 md:px-8{% endif %} {% if templateClass %}{{ templateClass }}{% endif %}">

        {{ content | safe }}

          <script>
            document
              .getElementById("toggleDarkMode")
              .addEventListener("click", function () {
                if (isDarkMode()) {
                  localStorage.theme = "light";
                  document.documentElement.classList.remove("dark");
                } else {
                  localStorage.theme = "dark";
                  document.documentElement.classList.add("dark");
                }
                switchPrismTheme();
              });

          </script>
      </main>

      <footer class="flex w-full pt-8 pb-4 flex-col md:flex-row justify-between gap-4">
        {% if spotify.nowPlaying %}
        <div class="flex items-center not-prose p-2 rounded-lg card-glass text-xs">
          <img id="track-image" class="w-8 h-8 rounded-full mr-2 animate-spin-slow shadow-lg"
            src="{{ spotify.nowPlaying.albumImageUrl }}" alt="{{ spotify.nowPlaying.title }}">
          <div>
            <a href={{ spotify.nowPlaying.songUrl }} target='_blank' class='hover:underline font-medium'>{{ spotify.nowPlaying.title }}</a>
            <p class="text-gray-500 dark:text-gray-400">{{ spotify.nowPlaying.artist }}</p>
          </div>
        </div>
        {% endif %}
        <div class='flex items-center gap-2'>
          <a class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all" href="https://www.linkedin.com/in/kartikeychauhan/" title="LinkedIn" aria-label="LinkedIn">{% feather "linkedin" %}</a>
          <a class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all" href="https://github.com/carteakey" title="GitHub" aria-label="GitHub">{% feather "github" %}</a>
          <span class="text-gray-300 dark:text-gray-600">|</span>
          <a class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all" href="{{ '/search/' | url }}" title="Search" aria-label="Search">{% feather "search" %}</a>
          <a class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all" href="{{ '/feed.xml' | url }}" title="RSS" aria-label="RSS">{% feather "rss" %}</a>
          <a class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-all" href="{{ '/newsletter/' | url }}" title="Newsletter" aria-label="Newsletter">{% feather "mail" %}</a>
        </div>
      </footer>


      {# Extended footer section #}
      <div class="border-t border-gray-200 dark:border-gray-700 pt-6 pb-8 not-prose">

        {# Categorized footer navigation #}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-3 text-sm max-w-2xl mx-auto">
          
          {# Read ‚Äî content for others #}
          <div>
            <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-1.5 text-xs uppercase tracking-wider">Read</h4>
            <ul class="space-y-1 list-none m-0 p-0">
              <li><a href="{{ '/now' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "clock", class="w-3.5 h-3.5" %}Now</a></li>
              <li><a href="{{ '/feed' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "activity", class="w-3.5 h-3.5" %}Feed</a></li>
              <li><a href="{{ '/blog' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "edit-3", class="w-3.5 h-3.5" %}Blog</a></li>
              <li><a href="{{ '/snippets' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "terminal", class="w-3.5 h-3.5" %}Snippets</a></li>
            </ul>
          </div>

          {# Explore ‚Äî creative & fun #}
          <div>
            <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-1.5 text-xs uppercase tracking-wider">Explore</h4>
            <ul class="space-y-1 list-none m-0 p-0">
              <li><a href="{{ '/projects' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "code", class="w-3.5 h-3.5" %}Projects</a></li>
              <li><a href="{{ '/gallery' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "camera", class="w-3.5 h-3.5" %}Gallery</a></li>
              <li><a href="{{ '/vibes' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "image", class="w-3.5 h-3.5" %}Vibes</a></li>
              <li><a href="{{ '/quotes' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "message-circle", class="w-3.5 h-3.5" %}Quotes</a></li>
              <li><a href="{{ '/games' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "play", class="w-3.5 h-3.5" %}Games</a></li>
              <li><a href="{{ '/workouts' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "zap", class="w-3.5 h-3.5" %}Workouts</a></li>
            </ul>
          </div>

          {# About Me ‚Äî personal & professional #}
          <div>
            <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-1.5 text-xs uppercase tracking-wider">About Me</h4>
            <ul class="space-y-1 list-none m-0 p-0">
              <li><a href="{{ '/about' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "user", class="w-3.5 h-3.5" %}About</a></li>
              <li><a href="{{ '/cv' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "file-text", class="w-3.5 h-3.5" %}CV</a></li>
              <li><a href="{{ '/skills' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "target", class="w-3.5 h-3.5" %}Skills</a></li>
              <li><a href="{{ '/uses' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "tool", class="w-3.5 h-3.5" %}Uses</a></li>
            </ul>
          </div>

          {# Meta ‚Äî site utilities & links #}
          <div>
            <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-1.5 text-xs uppercase tracking-wider">Meta</h4>
            <ul class="space-y-1 list-none m-0 p-0">
              <li><a href="{{ '/search' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "search", class="w-3.5 h-3.5" %}Search</a></li>
              <li><a href="{{ '/stats' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "bar-chart-2", class="w-3.5 h-3.5" %}Stats</a></li>
              <li><a href="{{ '/blogroll' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "bookmark", class="w-3.5 h-3.5" %}Blogroll</a></li>
              <li><a href="{{ '/bookmarks' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "book-open", class="w-3.5 h-3.5" %}Bookmarks</a></li>
              <li><a href="{{ '/newsletter' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "mail", class="w-3.5 h-3.5" %}Newsletter</a></li>
              <li><a href="{{ '/guestbook' | url }}" class="inline-flex items-center gap-1.5 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">{% feather "edit", class="w-3.5 h-3.5" %}Guestbook</a></li>
            </ul>
          </div>

        </div>
        
        {# Made with love + theme picker section #}
        <div class="text-center mt-5">
          <div class="text-sm text-gray-600 dark:text-gray-400">
            Made with ‚ù§Ô∏è using <a href="https://www.11ty.dev/" class="hover:underline" target="_blank" rel="noopener">Eleventy</a> 
            and <a href="https://tailwindcss.com/" class="hover:underline" target="_blank" rel="noopener">Tailwind CSS</a>
          </div>
          
          {# Compact accent theme slider #}
          <div class="flex items-center justify-center mt-3">
            <div x-data="{ 
              currentTheme: localStorage.accentTheme || 'amber',
              currentIndex: 7,
              themes: [
                { name: 'gray', label: 'Gray', color: 'bg-gray-500' },
                { name: 'slate', label: 'Slate', color: 'bg-slate-500' },
                { name: 'zinc', label: 'Zinc', color: 'bg-zinc-500' },
                { name: 'neutral', label: 'Neutral', color: 'bg-neutral-500' },
                { name: 'stone', label: 'Stone', color: 'bg-stone-500' },
                { name: 'red', label: 'Red', color: 'bg-red-500' },
                { name: 'orange', label: 'Orange', color: 'bg-orange-500' },
                { name: 'amber', label: 'Amber', color: 'bg-amber-500' },
                { name: 'yellow', label: 'Yellow', color: 'bg-yellow-500' },
                { name: 'lime', label: 'Lime', color: 'bg-lime-500' },
                { name: 'green', label: 'Green', color: 'bg-green-500' },
                { name: 'emerald', label: 'Emerald', color: 'bg-emerald-500' },
                { name: 'teal', label: 'Teal', color: 'bg-teal-500' },
                { name: 'cyan', label: 'Cyan', color: 'bg-cyan-500' },
                { name: 'sky', label: 'Sky', color: 'bg-sky-500' },
                { name: 'blue', label: 'Blue', color: 'bg-blue-500' },
                { name: 'indigo', label: 'Indigo', color: 'bg-indigo-500' },
                { name: 'violet', label: 'Violet', color: 'bg-violet-500' },
                { name: 'purple', label: 'Purple', color: 'bg-purple-500' },
                { name: 'fuchsia', label: 'Fuchsia', color: 'bg-fuchsia-500' },
                { name: 'pink', label: 'Pink', color: 'bg-pink-500' },
                { name: 'rose', label: 'Rose', color: 'bg-rose-500' }
              ],
              init() {
                this.currentIndex = this.themes.findIndex(t => t.name === this.currentTheme);
                if (this.currentIndex === -1) this.currentIndex = 7;
              },
              updateTheme(index) {
                this.currentIndex = index;
                this.currentTheme = this.themes[index].name;
                setAccentTheme(this.currentTheme);
              }
            }" 
            x-init="init()"
            class="flex items-center gap-2 w-full max-w-xs">
              <span class="text-xs text-gray-500 dark:text-gray-500 whitespace-nowrap">üé®</span>
              <div class="relative flex-1 h-5 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                <div class="absolute inset-0 rounded-full opacity-60" style="background: linear-gradient(to right, 
                  #6b7280 0%, #64748b 4.5%, #71717a 9%, #737373 13.5%, #78716c 18%, 
                  #dc2626 22.5%, #ea580c 27%, #f59e0b 31.5%, #eab308 36%, #84cc16 40.5%, 
                  #22c55e 45%, #10b981 49.5%, #14b8a6 54%, #06b6d4 58.5%, #0ea5e9 63%, 
                  #3b82f6 67.5%, #6366f1 72%, #8b5cf6 76.5%, #a855f7 81%, #d946ef 85.5%, 
                  #ec4899 90%, #f43f5e 94.5%, #f43f5e 100%)"></div>
                <div 
                  class="absolute top-0.5 w-4 h-4 rounded-full shadow-md cursor-pointer transform -translate-x-1/2 transition-all duration-200 border-2 border-white dark:border-gray-800"
                  :class="themes[currentIndex].color"
                  :style="`left: ${(currentIndex / (themes.length - 1)) * 100}%`">
                </div>
                <input 
                  type="range" 
                  min="0" 
                  :max="themes.length - 1" 
                  :value="currentIndex"
                  @input="updateTheme(parseInt($event.target.value))"
                  class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
              </div>
              <span class="text-xs text-gray-500 dark:text-gray-500 whitespace-nowrap capitalize w-14 text-left" x-text="themes[currentIndex].label"></span>
            </div>
          </div>
          
          <div class="text-xs text-gray-500 dark:text-gray-500 mt-2">
            ¬© {{ metadata.author.name }} ‚Ä¢ 2025
          </div>
        </div>
      </div>
    </div>
  </div>

  {# Medium Zoom for click-to-zoom images #}
  <script src="https://cdn.jsdelivr.net/npm/medium-zoom@1.1.0/dist/medium-zoom.min.js"></script>
  <script>mediumZoom('[data-zoomable]', { background: 'rgba(0,0,0,0.85)' })</script>

  {# Easter Eggs - loaded from external file #}
  <script defer src="/static/js/easter-eggs.js"></script>

  {# Service Worker Registration for Offline Support #}
  <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/static/js/sw.js')
          .then(registration => {
            // Service worker registered successfully
          })
          .catch(error => {
            console.warn('Service worker registration failed:', error);
          });
      });
    }
  </script>

  {% if hasEthicalAds and metadata.ethicalAds and metadata.ethicalAds.publisher %}
    <script async src="https://media.ethicalads.io/media/client/ethicalads.min.js"></script>
  {% endif %}
</body>
</html>
