{% if steam and steam.length > 0 %}
  {% set cardShell = "rounded-xl border border-gray-200 dark:border-gray-800 bg-gray-100/80 dark:bg-gray-900/70 shadow-sm" %}
  <div class="steam-snippet">
    <h3>Latest Games</h3>
    <div class="grid gap-3 md:grid-cols-3">
      {% for game in steam | head(2) %}
        <article class="{{ cardShell }} overflow-hidden transition-shadow duration-200 hover:shadow-lg">
          <img src="{{ game.library_hero }}" alt="{{ game.name }} hero" loading="lazy" decoding="async" class="h-32 w-full object-cover">

          <div class="flex flex-col items-center gap-2 p-4 text-center">
            <a href="{{ game.url }}" target="_blank" rel="noopener noreferrer" title="View on Steam" class="inline-flex items-center gap-2 text-sm font-semibold tracking-tight text-gray-900 transition-colors hover:text-amber-600 dark:text-gray-100 dark:hover:text-amber-400">
              {{ game.name }}
              {% feather "external-link", class="w-4 h-4" %}
            </a>
            <p class="text-xs text-gray-600 dark:text-gray-300">
              {% if game.playtime_2weeks > 0 %}
                {{ game.playtime_2weeks }}h last 2 weeks
              {% endif %}
              {% if game.playtime_forever > 0 %}
                {% if game.playtime_2weeks > 0 %} â€¢ {% endif %}{{ game.playtime_forever }}h total
              {% endif %}
            </p>
          </div>
        </article>
      {% endfor %}
    </div>

    <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
      <a href="/games" class="inline-flex items-center gap-1 text-amber-600 transition hover:text-amber-500 dark:text-amber-400 dark:hover:text-amber-300">
        View all recent games
        {% feather "arrow-right", class="w-4 h-4" %}
      </a>
    </p>
  </div>
{% endif %}
