<ul reversed class="postlist w-full list-none sm:pl-6"
  style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} my-6 py-1 px-0 mx-0">
    <div class="md:grid md:grid-cols-10 md:gap-x-4 gap-y-1 sm:gap-y-2">
      {# Title first on mobile; sits to the right on desktop #}
      <a href="{{ post.url | url }}" class="block order-1 md:order-2 md:col-span-7 font-medium leading-snug hover:underline">
        {% if post.data.title %}
        {{ post.data.title }}
        {% else %}
        <code>{{ post.url }}</code>
        {% endif %}
      </a>

      {# Desktop-only: Date and Reading Time in left column #}
      <div class="hidden md:flex md:order-1 md:col-span-3 flex-row text-sm gap-1">
        <time class="postlist-date text-gray-500 dark:text-gray-400" datetime="{{ post.date | postDate }}">{{ post.date | postDate }}</time>
        <span class="text-xs text-gray-500 dark:text-gray-400 flex items-center gap-1">
          {% feather "clock", class="w-3 h-3" %}
          {{ post.templateContent | readingTime }}
        </span>
      </div>

      {# Description appears directly under title on desktop #}
      <div class='order-2 md:order-4 md:col-span-7 text-gray-600 dark:text-gray-300 font-light'>
        {{ post.data.description }}
      </div>

      {# Desktop-only: Tags after description #}
      <div class="hidden md:flex md:order-3 md:col-span-3 flex-wrap items-start gap-2 pt-1">
        {% for tag in post.data.tags | filterTagList %}
        {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="text-sm no-underline hover:underline">{{ tag }}</a>
        {% endfor %}
      </div>

      {# Mobile meta row: date + reading time + tags (compact) #}
      <div class="order-3 md:hidden flex flex-wrap items-center gap-x-2 gap-y-2 mt-1 text-sm">
        <time class="postlist-date text-xs text-gray-500 dark:text-gray-400" datetime="{{ post.date | postDate }}">{{ post.date | postDate }}</time>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <span class="text-xs text-gray-500 dark:text-gray-400 flex items-center gap-1">
          {% feather "clock", class="w-3 h-3" %}
          {{ post.templateContent | readingTime }}
        </span>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <div class="flex flex-wrap items-center gap-2">
          {% for tag in post.data.tags | filterTagList %}
          {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="text-xs no-underline hover:underline">{{ tag }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </li>
  {% endfor %}
</ul>